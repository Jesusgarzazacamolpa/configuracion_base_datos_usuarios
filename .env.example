# Archivo de variables de entorno para PostgreSQL Docker
# Copia este archivo a .env y personaliza los valores según tus necesidades

# Configuración de PostgreSQL
POSTGRES_DB=mi_base_datos
POSTGRES_USER=mi_usuario
POSTGRES_PASSWORD=mi_contraseña_segura

# Usuario adicional para acceso remoto
REMOTE_USER=usuario_remoto
REMOTE_PASSWORD=contraseña_remota

# Puerto de PostgreSQL (cambiar si es necesario)
POSTGRES_PORT=5432

# Configuración de pgAdmin
PGADMIN_EMAIL=admin@admin.com
PGADMIN_PASSWORD=admin123
PGADMIN_PORT=8080

# Configuración de red
POSTGRES_HOST=localhost

# Configuración de memoria (opcional)
POSTGRES_SHARED_BUFFERS=128MB
POSTGRES_EFFECTIVE_CACHE_SIZE=4GB